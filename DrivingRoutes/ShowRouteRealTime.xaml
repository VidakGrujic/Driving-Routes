<UserControl x:Class="DrivingRoutes.ShowRouteRealTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrivingRoutes"
             xmlns:gmf="clr-namespace:GMap.NET.WindowsForms;assembly=GMap.NET.WindowsForms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="loadVideoBtn"  Content="Load video" Click="loadVideoBtn_Click" Margin="329,429,325,-0.4"></Button>
        <WindowsFormsHost Margin="0,0,0,35.6">
            <gmf:GMapControl x:Name="gmap"
                                 CanDragMap="True" 
                                 MarkersEnabled="True"
                                 RoutesEnabled="True"
                                 MinZoom="2" MaxZoom="18" Zoom="14"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
